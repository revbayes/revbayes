seed(42)
write("Values on each row should be identical:")

# Test Inverse Exponential distribution
exp ~ dnExp(1)
exp.clamp(42)
invExp ~ dnInv(dnExp(1))
invExp.clamp(42)
print("TestExp: ", -exp.lnProbability(), "42", invExp.lnProbability())


# Test Inverse Phylogenetic distribution
chars <- readDiscreteCharacterData("../validation/data/primates_cytb.nex")

taxa <- chars.names()
n_taxa <- chars.size()
n_edge <- 2 * nTaxa - 3

topology ~ dnUniformTopology(taxa)
br_lengths ~ dnDirichlet(rep(1.0, nEdge))
phylogeny := treeAssembly(topology, br_lengths)

q4 = fnJC(4)
phy ~ dnPhyloCTMC(tree = phylogeny, Q = q4, type = "DNA")
phy.clamp(chars)
invPhy ~ dnInv(dnPhyloCTMC(tree = phylogeny, Q = q4, type = "DNA"))
invPhy.clamp(chars)
print("TestPhylo:", -phy.lnProbability(), invPhy.lnProbability())
